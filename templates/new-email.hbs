<form>
  <div class="form-group">
    <label for="to">To:</label>
      {{input value=to id="to" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="copy">Cc:</label>
      {{input value=copy id="copy" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="subject">Subject:</label>
      {{input value=subject id="subject" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="body">Body:</label>
      {{textarea value=body id="body" class="form-control" rows="15"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Send</button>

</form>
